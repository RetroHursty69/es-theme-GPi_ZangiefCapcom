<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical_wheel</type>
        <pos>-0.25 0</pos>
        <size>1 1</size>
        <logoScale>1.1</logoScale>
        <logoSize>0.4 0.3</logoSize>
        <color>00000000</color>
        <maxLogoCount>9</maxLogoCount>
        <logoRotation>-4</logoRotation>
		<logoRotationOrigin>-4.0 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.313 0.886</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>0d46c1</color>
         <fontPath>./_inc/fonts/Bangers.ttf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Bangers.ttf</fontPath>
         <fontSize>0.04</fontSize>     
         <pos>1.24 1.95</pos>      
         <textColor>ffd800</textColor>
         <iconColor>ffd800</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Bangers.ttf</fontPath>
         <fontSize>0.03</fontSize>     
         <pos>1.02 0.96</pos>      
         <textColor>ffd800</textColor>
         <iconColor>ffd800</iconColor>
      </helpsystem>
   </view>    
   
<!--
System Gamelist
--> 

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <zIndex>43</zIndex>	      
	     <selectorColor>1c1c1c00</selectorColor>
	     <selectedColor>ffd800</selectedColor>   
         <pos>0.6 0.01</pos>
         <size>0.39 0.857</size>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
